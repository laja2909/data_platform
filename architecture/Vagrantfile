Vagrant.configure("2") do |config|
  
  servers=[
      {
        :hostname => "host",
        :box => "ubuntu/bionic64",
        #:box => "ubuntu/focal64",
        #:box_version => "20210125.0.0",
        :ip => "192.168.33.10",
        :provision_file => File.join(File.dirname(__FILE__), "initialize_host.sh"),
        :sync_host => "../",
        :sync_guest => "/opt/data_platform"

      },
      {
        :hostname => "airflow",
        :box => "ubuntu/bionic64",
        #:box => "ubuntu/focal64",
        #:box_version => "20210125.0.0",
        :ip => "192.168.33.20",
        :provision_file =>File.join(File.dirname(__FILE__), "initialize_airflow.sh")
      },
      {
        :hostname => "db",
        :box => "ubuntu/bionic64",
        #:box => "ubuntu/focal64",
        #:box_version => "20210125.0.0",
        :ip => "192.168.33.30",
        :provision_file =>File.join(File.dirname(__FILE__), "initialize_db.sh")

      }
    ]
  
  servers.each do |machine|
    config.vm.define machine[:hostname] do |node|
      node.vbguest.auto_update = false
      node.vm.boot_timeout = 600
  
      #provision the box
      provision_filename = machine[:provision_file]
      if File.exists?(provision_filename) then
        node.vm.provision "shell", :path => provision_filename
      end
      
      node.vm.box = machine[:box]
      #node.vm.box_version = machine[:box_version]
      node.vm.hostname = machine[:hostname]
      node.vm.network "private_network", ip: machine[:ip]
      #node.vm.network "forwarded port", guest: machine[:guest_port], host: machine[:host_port]

      if machine.has_key?(:sync_guest) then
        node.vm.synced_folder machine[:sync_host], machine[:sync_guest], owner: "vagrant", group: "vagrant", mount_options: ["fmode=700", "dmode=700"]
      else
        node.vm.synced_folder '.', '/vagrant', disabled: true
      end

      node.vm.provider :virtualbox do |vb|
        vb.memory = "4096"
        vb.cpus = 2
        vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
        vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
        #vb.gui = true
      end
    end
  end
end
